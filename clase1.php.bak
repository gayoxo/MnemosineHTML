<?php

class _
{
    public function __construct( array $cfg){
        foreach($cfg as $k=>$v){
            $this->{$k}=$v;
        }
    }
    
    public function __call( $fn, array $args){
        if(isset($this->{$fn})){
            array_unshift($args, $this);
            call_user_func_array( $this->{$fn}, $args);
        }
    }
}

$o = new _(array(
    "color"=>"blue",
    "run"=>function($this2){
        echo "My color is : ".$this2->color;
    }
));

$o->run();

?>